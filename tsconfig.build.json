{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5", // 确定使用 es5 版本
    "declaration": true, // 为每个 js 文件生成 .d.ts 文件
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/setupTests.ts",
  ]
}